<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPage.AccountSetting">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/acn_headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/acn_backBtn"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_arrow_left"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="계정 설정"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/acn_backBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID 정보"
        android:textSize="22dp"
        android:layout_marginLeft="12pt"
        android:layout_marginTop="2pt"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/acn_headerLayout"></TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/acn_contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:layout_margin="16dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/info_title">

        <TextView
            android:id = "@+id/text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[ID]   YoriZori"
            android:textSize="16dp"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="5pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_point"
            />
        <TextView
            android:id = "@+id/text_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" [P]   1000 "
            android:textSize="16dp"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="5pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_id"
            />
        <Button
            android:id="@+id/acn_btn"
            android:text="아이디 / 비밀번호 변경"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5pt"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
            android:background="#ff7d5a"
            app:layout_constraintTop_toBottomOf="@id/text_point"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/notify_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="알림"
        android:textSize="22dp"
        android:layout_marginLeft="12pt"
        android:layout_marginTop="5pt"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/acn_contentLayout"></TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/acn_contentLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:layout_margin="16dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/notify_title">

        <TextView
            android:id = "@+id/text_notes_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="# 알림설정"
            android:textSize="18dp"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="5pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/general_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="일반"
        android:textSize="22dp"
        android:layout_marginLeft="12pt"
        android:layout_marginTop="5pt"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/acn_contentLayout2"></TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/acn_contentLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:layout_margin="16dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/general_title">

        <TextView
            android:id = "@+id/text_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="# 로그아웃"
            android:textSize="18dp"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="5pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_withdrawal"
            />
        <TextView
            android:id = "@+id/text_withdrawal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="# 회원탈퇴"
            android:textSize="18dp"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="5pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_logout"
            />
        <TextView
            android:id = "@+id/text_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="# 어플정보"
            android:textSize="18dp"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="5pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_withdrawal"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>